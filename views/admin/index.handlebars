<h4>使用者頁列表</h4>
<br />
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">信箱</th>
      <th scope="col">名字</th>
      <th scope="col">收支紀錄筆數</th>
      <th scope="col">詳細/刪除</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.email}}</th>
      <td>{{this.name}}</td>
      <td>
        <span class="mx-4">{{this.recordLength}}</span>
      </td>
      <td>
        <button type="button" class="btn btn-link">
          <a href="/admin/user/{{this._id}}">
            Show
          </a>
        </button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>