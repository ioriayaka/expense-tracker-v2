<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter 6~12 characters Password">
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-2">Login</button>
        <a href="/auth/facebook" class="btn btn-light btn-block logo-button" style="line-height: 100%;"><i class="fab fa-facebook fa-lg"></i>&nbsp;Login with
          Facebook</a>
        <a href="/auth/google" class="btn btn-light btn-block logo-button"><i class="fab fa-google fa-lg"></i>&nbsp;Login with Google</a>
        <a href="/auth/github" class="btn btn-light btn-block logo-button"><i class="fab fa-github fa-lg"></i>&nbsp;Login with GitHub</a>
      </form>
      <p class="lead mt-4">
        No account ? <a href="/users/register">Click here to register</a>
      </p>
      <p><a href="/admin/signin" style="color:#FF6600;font-weight:700;">後臺登入</a></p>
    </div>
  </div>
</div>